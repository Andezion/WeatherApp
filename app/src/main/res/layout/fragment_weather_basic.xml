<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_weather_basic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|top"
    android:padding="16dp"
    android:background="@color/basicBackground">

    <TextView android:id="@+id/text_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Город"
        android:textSize="20sp"
        android:paddingTop="100dp"/>

    <TextView android:id="@+id/text_coordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="18sp"
        android:padding="8dp"
        android:text="Координаты" />

    <TextView android:id="@+id/text_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:padding="8dp"
        android:text="Температура" android:textSize="32sp" />

    <TextView android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="18sp"
        android:padding="8dp"
        android:text="Описание погоды" />
</LinearLayout>
